<UserControl x:Class="EduCenter.Desktop.Components.StatusUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduCenter.Desktop.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" 
             d:DesignWidth="100">
    <Border x:Name="brBackground" 
            CornerRadius="10"
            Background="#E7B27E">
        <Label x:Name="tbTitle" FontSize="12" 
               Margin="5 0"
               FontWeight="Bold"
               Foreground="White"
               Content="Pending"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
    </Border>
</UserControl>
